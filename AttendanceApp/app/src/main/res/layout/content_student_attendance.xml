<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <com.mjjam.attendanceapp.widgets.BaseTextView
        style="@style/PrimaryText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:text="Attendance Monitor"
        android:textSize="25sp" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spSelectMonth"
        style="@style/PrimaryText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:prompt="Select Month"
        android:spinnerMode="dialog" />

    <com.mjjam.attendanceapp.widgets.BaseTextView
        android:id="@+id/tvOverallAttendance"
        style="@style/PrimaryText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:text="Overall :"
        android:textSize="20sp" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spSelectCourse"
        style="@style/PrimaryText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:prompt="Select Course"
        android:spinnerMode="dialog" />

    <com.mjjam.attendanceapp.widgets.BaseTextView
        android:id="@+id/tvCourseAttendance"
        style="@style/PrimaryText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:text="Course Attendance : "
        android:textSize="20sp" />

</LinearLayout>